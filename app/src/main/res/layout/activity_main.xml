<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.reiko.businesscard.Activity.MainActivity">

    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center">

        <Button
            android:id="@+id/buttonCreateCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CreateCard"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="283dp" />

        <Button
            android:id="@+id/buttonLoadCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LoadCard"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="283dp" />

        <Button
        android:id="@+id/buttonImportCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="import"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="283dp" />

    <Button
        android:id="@+id/buttonSendCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SendCard"
        tools:layout_editor_absoluteY="346dp"
        tools:layout_editor_absoluteX="262dp" />

    <Button
        android:id="@+id/buttonMyContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyContact"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="346dp" />

    <Button
        android:id="@+id/buttonListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="346dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
